{#
| Variable        | Type       | Description                                                      |
|-----------------|------------|------------------------------------------------------------------|
| display_all_url | ?string    | If it's existed, mean should show load more link to this url     |
| title           | string     |                                                                  |
| products        | Products[] |                                                                  |
| position        | Int        | Sorting number start from zero                                   |
| limit           | Int        | Number of products to be shown
#}
{% set is_vertical = theme.settings.get('vertical_fixed_products', true) %}
<section class="s-block container">
    {% if title %}
      <div class="s-block__title s-block__title__Alla">
        <div class="">
          <h2>{{ title }}</h2>
          {# <p>عنوان فرعي توصيفي صغير</p> #}
        </div>
        {% if display_all_url %}
            <a href="{{ display_all_url }}" class="s-block__display-all">{{ trans('blocks.home.display_all') }} <i class="sicon-arrow-left"></i></a>
        {% endif %}
  <div class="All-line flex items-center justify-center">
  <div class="line"></div>
  <div class="Circle"></div>
  <div class="line"></div>
</div>
      </div>
    {% endif %}

    <salla-products-list
      source="selected"
      limit="{{ limit }}"
      source-value="[{{ products|map((product) => product.id)|join(',') }}]"
      class="{{is_vertical ? 'vertical-products' : 'horizontal-products'}}"
      {{is_vertical ? '' : 'horizontal-cards'}}
      >
    </salla-products-list>
     <style>
  .All-line
  {
    width: 100%;
  }
  .All-line .line
  {
    width: 50px;
    height: 5px;
    border-radius: 10px;
    background-color: black;
    margin: 5px;
  }
  .All-line .Circle
  {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: black;
    margin: 5px;
  }
  .s-block__title__Alla
  {
    justify-content: center;
    flex-direction: column;
  }
  .s-products-list-wrapper
  {
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-wrap: wrap;
  }
   .s-products-list-wrapper .s-product-card-vertical
   {
    width: 250px;
   }
</style> 
</section>


